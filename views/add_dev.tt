        <script>
	    $(document).ready(function(){
                
               // $("#addDev").validate({
               //     rules: {
               //         uid: {
               //            required: true,
               //            minlength: 4
               //         },
               //         name: {
               //            required: true,
               //         }
               //     }
               // });
                
                // if($("#name").val != ''){
                //     $("#submitData").removeAttr('disabled');
                // }
                 
                // click on button submit
                $("#submitData").click(function(event) {
                 // send ajax
                    var formData = {
                        'name'   :$('#name').val(),
                        'team'   :$('#teamId option:selected').val(),
                        'user_id':$('#userId').val()
                    };

                    console.log(formData);

                    var sendData = JSON.stringify(formData);

                     $.ajax({
                         url: '/api/v1/admin/dev/add',
                         type : "POST", 
                         dataType : 'json',
                         data : sendData,
                         encode : true
                     }).done(function(data) {

                      console.log(data);

                      if(data.status != 1 || data.status == -1) {
                         event.preventDefault();
		             if(data.status == -1) {
                                 $.alert({
                                     title: 'Warning',
                                     theme: 'supervan',
                                     icon: 'fa fa-warning',
                                     type: 'orange',
                                     content: 'User already exists!',
                                 });
                                  $('.success').append('<div class="alert alert-warning">' + 'User already exists' + '</div>').fadeOut(5000);
                              return false;
                             } else if (data.status == 0) {
                                 $.alert({
                                     title: 'Error',
                                     theme: 'supervan',
                                     icon: 'fa fa-error',
                                     type: 'red',
                                     content: 'Server Error',
                                 });
                               $('.success').append('<div class="alert alert-error">' + 'Exception: Server Error' + '</div>').fadeOut(5000);
                              return false;
                          }
                     } else {
                                 $.alert({
                                     title: 'Success',
                                     theme: 'supervan',
                                     icon: 'fa fa-success',
                                     type: 'green',
                                     content: 'User Registered Successfully',
                                 });
                          $('.success').append('<div class="alert alert-success">' + 'User Registered Successfully' + '</div>').fadeOut(5000);

                     }
             });
           });
         });
	
		</script>
		
